##############################################################
# Default Screen setup
#
# Author: Prasad Athawale
##############################################################

# Number of screen scrollback lines
defscrollback 5000

# Disable startup message
startup_message off

# Always on hard status
hardstatus on

# Hardstatus always on last line
hardstatus alwayslastline

# Custom format for hardstatus string
hardstatus string "%{.bW}%-w%{.rW}%n %t%{-}%+w %=%{..G} %H %{..Y} %m/%d %C%a "

# Upto 10 screens (0-9)
maxwin 10

# Resize window to region size
fit

# Change escape sequence from the default of CTRL-A to CTRL-X
escape x

# Location of hardcopy files
hardcopydir ~/screenlog

# Location of log directory
logdir ~/screenlog


